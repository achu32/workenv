# ackeack's workenv config
hardstatus alwayslastline '%{= kw}%{w}[%{r} %d/%m/%y %C %A %{w}]%{w}[%-w%{bw}%n:%t%{= kw} %+w %=][ %{= kr}%H%{= kw} ]'
term screen-256color

# Start message
startup_message off

# Set default encoding using utf8
defutf8 on

# Disable vbell
vbell off

# Keboard binding
# bind F1 to move to previous window
bindkey -k F1 prev
# bind F2 to move to next window
bindkey -k F2 next
# bind Alt`~= to screen0~12
bindkey "^[`" select 0
bindkey "^[1" select 1
bindkey "^[2" select 2
bindkey "^[3" select 3
